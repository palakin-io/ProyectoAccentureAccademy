@model IEnumerable<AccentureAccaBookStore.Models.Genre>

@{
    ViewBag.Title = "Index";
}

<h2>Genre</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fas fa-edit"></i></a> |
            <a href="@Url.Action("Details", new { id = item.Id })"><i class="fas fa-info-circle"></i></a> |
            <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fas fa-trash"></i></a>
        </td>
    </tr>
}

</table>

@model IEnumerable<AccentureAccaBookStore.Models.Author>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Authors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Author Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fas fa-edit"></i></a> |
            <a href="@Url.Action("Details", new { id = item.Id })"><i class="fas fa-info-circle"></i></a> |
            <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fas fa-trash"></i></a>
        </td>
    </tr>
}

</table>

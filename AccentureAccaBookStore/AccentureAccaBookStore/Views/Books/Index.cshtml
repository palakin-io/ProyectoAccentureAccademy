@model IEnumerable<AccentureAccaBookStore.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Books</h2>

<p>
    @Html.ActionLink("New Book", "Create")
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher.Name)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fas fa-edit"></i></a> |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
